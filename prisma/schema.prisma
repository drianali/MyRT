generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String   @unique
  phoneNumber   String   @unique
  password      String
  createdAt     DateTime @default(now())
  
  people        People?
  
  roleId        Int?
  role          Role?    @relation(fields: [roleId], references: [id])
  
  announcements Announcement[]
}

model Letter {
  id          Int      @id @default(autoincrement())
  letterType  String
  needs       String
  status      String
  createdAt   DateTime @default(now())
  
  peopleId    Int
  people      People   @relation(fields: [peopleId], references: [id])
}

model Complaint {
  id          Int      @id @default(autoincrement())
  titleReport String
  category    String
  description String
  picture     String?
  status      String
  createdAt   DateTime @default(now())
  
  peopleId    Int
  people      People   @relation(fields: [peopleId], references: [id])
}

model People {
  id                  Int      @id @default(autoincrement())
  nik                 String   @unique
  name                String   @unique
  address             String
  residentStatus      String?
  numberFamilyMembers String?
  createdAt           DateTime @default(now())
  
  userId              Int      @unique
  user                User     @relation(fields: [userId], references: [id])
  
  letters             Letter[]
  complaints          Complaint[]
}

model Role {
  id        Int      @id @default(autoincrement())
  roleName  String   @unique
  createdAt DateTime @default(now())
  
  users     User[]
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  content   String
  createdAt DateTime @default(now())
  
  adminId   Int
  admin     User     @relation(fields: [adminId], references: [id])
}